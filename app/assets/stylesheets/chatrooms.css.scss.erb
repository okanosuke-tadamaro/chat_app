html, body { height: 100%; }

body {
  background-image: url('<%= asset_path('shattered.png') %>');
  background-attachment: fixed;
  font-family: 'Roboto Condensed';
  color: #555;
}

.clear { clear:both; }
.center { text-align: center; }
.button { border: none; }
.left_col { width: 680px; float: left; }
.right_col { width: 250px; float: right; i { margin-right: 5px; } }
.right { float: right; }
.left { float: left; }
.wrap { width: 980px; margin: 0 auto; padding-top: 90px; }
.top-padding { padding-top: 20px; }
.username { color: #e67e22; }
i { width: 15px; color: #F39C12; }
a { text-decoration: none; color: #e67e22; }

.welcome-logo img {
  width: 512px;
}

.fixed_header {
  width: 100%;
  height: 50px;
  position: fixed;
  top: 0;
  left: 0;
  background: #333;
  z-index: 2;
  .header_content {
    width: 980px;
    margin: 0 auto;
    .logo {
      float: left;
      background-image: url('<%= asset_path('logo.png') %>');
      background-repeat: no-repeat;
      background-size: 25px 25px;
      background-position: left center;
      h1 {
        margin: 0;
        padding-left: 35px;
        line-height: 50px;
        font-size: 26px;
        text-transform: uppercase;
      }
    }
    .nav {
      margin: 0;
      float: right;
      li {
        display: inline;
        line-height: 50px;
        margin-left: 10px;
        font-size: 14px;
      }
    }
    a {
      color: #fff;
    }
  }
}

.chat-index {
  margin-top: 50px;
  .form-box {
    width: 330px;
    text-align: center;
    h3 {
      margin-bottom: 10px;
    }
  }
}

.message-form {
  margin-bottom: 20px;
  #new-message {
    margin: 0;
    padding: 0;
    width: 597px;
    height: 40px;
    border: none;
    background: rgba(255, 255, 255, 0.5);
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);
  }
  button {
    width: 80px;
    height: 40px;
  }
}

.chat-box {
  height: 500px;
  width: 640px;
  background: rgba(0, 0, 0, 0.1);
  padding: 20px;
  overflow: scroll;
  box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2) inset;
}

.message-box {
  margin: 10px 0 10px 0;
  .message-avatar { width: 86px; }
  .message-content { min-width: 400px; max-width: 500px; border: solid 1px lightgray; position: relative; }
  .arrow_box {
    word-wrap: break-word;
  }
  .message-image {
    max-height: 250px;
    max-width: 250px;
  }
}

.left {
  float: left;
  .message-avatar { float: left; margin-right: 20px; }
  .message-content {
    float: left;
  }
  .arrow_box {
    position: relative;
    min-height: 60px;
    min-width: 150px;
    padding: 10px;
    background: #88b7d5;
    border: 1px solid lightgray;
  }
  .arrow_box:after, .arrow_box:before {
    right: 100%;
    top: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
  }
  .arrow_box:after {
    border-color: rgba(136, 183, 213, 0);
    border-right-color: #88b7d5;
    border-width: 20px;
    margin-top: -20px;
  }
  .arrow_box:before {
    border-color: rgba(194, 225, 245, 0);
    border-right-color: #c2e1f5;
    border-width: 21px;
    margin-top: -21px;
  }
}

.right { float: right; text-align: right;
  .message-avatar { float: right; margin-left: 20px; }
  .message-content {
    float: right;
  }
  .arrow_box {
    position: relative;
    min-height: 60px;
    min-width: 150px;
    padding: 10px;
    background: #d0d584;
    border: 1px solid #f7f7f7;
  }
  .arrow_box:after, .arrow_box:before {
    left: 100%;
    top: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
  }
  .arrow_box:after {
    border-color: rgba(208, 213, 132, 0);
    border-left-color: #d0d584;
    border-width: 20px;
    margin-top: -20px;
  }
  .arrow_box:before {
    border-color: rgba(247, 247, 247, 0);
    border-left-color: #f7f7f7;
    border-width: 21px;
    margin-top: -21px;
  }
}

.avatar_box { margin-bottom: 20px; text-align: center; }
.avatar-label {
  display: inline-block;
  width: 86px;
  margin: 0 10px 0 10px;
}

.label {
  text-align: center;
  font-size: 14px;
  color: darkgray;
}
.avatar {
  width: 80px;
  height: 80px;
  overflow: hidden;
  border: solid 3px white;
  border-radius: 50%;
  margin: 0;
  img {
    margin: 0;
    position: relative;
    height: 80px;
    left: -13px;
  }
}

.room_list {
  list-style-type: none;
  
  li {
    width: 100%;
    line-height: 25px;
    margin: 0;
  }
}