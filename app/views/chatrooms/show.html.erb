<h1><%= @chatroom.name %></h1>

<%= form_for([@chatroom, @chatroom.messages.new], remote: false) do |f| %>
  <div class="type-box">
    <%= f.text_field :content, id: "message_area" %>
  </div>
  <%= f.submit "Send", id: "send-button" %>
<% end %>

<div class="chat-box">
  <%= render partial: 'message', collection: @chatroom.messages.order(id: :desc) %>
</div>