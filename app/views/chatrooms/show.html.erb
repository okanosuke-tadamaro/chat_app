<h1><%= @chatroom.name %></h1>

<textarea type="text_area" id="new-message"></textarea>
<button id="send-button">Send</button>

<div class="chat-box">
  <% @messages.each do |msg| %>
    <div class="message-box" id="<%= msg.user.username %>">
      <p><%= msg.content %></p>
    </div>
  <% end %>
</div>

<%= javascript_tag do %>
  msgLayout("<%= j(current_user.username) %>");
<% end %>

<%= link_to "Chatrooms", "/chatrooms" %>
