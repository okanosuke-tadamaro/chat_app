<div class="wrap">
<h1 class="room-name"><%= @chatroom.name %></h1>

<% @avatars.each do |emo, img| %>
  <img src="<%= img.read %>" id="<%= current_user.username %>_<%= emo %>">
<% end %>

<textarea type="text_area" id="new-message"></textarea>
<button id="send-button">Send</button>

<div class="chat-box">
  <% @messages.each do |msg| %>
  <div class="message-wrap">
    <div class="message-box left" id="<%= msg.user.username %>">
      <p><%= msg.content %></p>
    </div>
  </div>
  <% end %>
</div>

<div class= "available_users">

<div>

<%= javascript_tag do %>
  msgLayout("<%= j(current_user.username) %>");
  setInterval(grabMessages, 3000);
<% end %>
</div>
