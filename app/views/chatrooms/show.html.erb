<h1><%= @chatroom.name %></h1>

<textarea type="text_area" id="new-message"></textarea>
<button id="send-button">Send</button>

<div class="chat-box">
  <% @messages.each do |msg| %>
   <div id="<%= msg.user.id %>" class="message-box left">
     <p><%= msg.content %></p>
   </div>
  <% end %>
</div>

