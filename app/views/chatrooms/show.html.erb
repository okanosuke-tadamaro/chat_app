<div class="wrap">
<h1 class="room-name"><%= @chatroom.name %></h1>

<div class="avatar_box">
  <% @avatars.each do |emo, img| %>
    <div class="avatar"><img src="<%= img.read %>" id="<%= current_user.username %>_<%= emo %>"></div>
  <% end %>
</div>

<textarea type="text_area" id="new-message"></textarea>
<button id="send-button">Send</button>

<div class="chat-box">
  <% @messages.each do |msg| %>
  <div class="message-wrap">
    <div class="message-avatar avatar">
      <img src='<%= RestClient.get("https://s3.amazonaws.com/s3-sample-pt/#{msg.user.username}_#{msg.emotion}.png") %>'>
    </div>
    <div class="message-box left" id="<%= msg.user.username %>">
      <p><%= msg.content %></p>
    </div>
  </div>
  <div class="clear"></div>
  <% end %>
</div>

<div class= "available_users">

<div>

<%= javascript_tag do %>
  msgLayout("<%= j(current_user.username) %>");
  setInterval(grabMessages, 3000);
<% end %>
</div>
