<div class="center">
	<h1>Welcome to EmoChat.io</h1>

	<% if signed_in? %>
		<%= link_to "Start Chatting!", chatrooms_path %>
	<% else %>
		<%= link_to "Sign in with Twitter", "/auth/twitter" %> ||
		<%= link_to "Sign in with Google", "/auth/google_oauth2" %>
	<% end %>

	<div class="welcome-logo">
		<%= image_tag('logo.png') %>
	</div>
</div>